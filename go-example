name: Go Example Workflow

on:
  push:
    branches:
      - main
  schedule:
    - cron: '*/15 * * * 1-6' # Execute a cada 15 minutos, de segunda a s√°bado

env:
  FILE_NAME: hello-server

jobs:
  BuildGo:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Build Go artifact for Linux
        run: go build ${{ env.FILE_NAME }}.go

      - name: Build Go artifact for Windows
        run: GOOS=windows GOARCH=amd64 go build ${{ env.FILE_NAME }}.go

  UploadArtifacts:
    needs: BuildGo
    runs-on: ubuntu-latest
    steps:
      - name: Upload artifact for Linux
        uses: actions/upload-artifact@v3
        with:
          name: linux
          path: ${{ env.FILE_NAME }}

      - name: Upload artifact for Windows
        uses: actions/upload-artifact@v3
        with:
          name: windows
          path: ${{ env.FILE_NAME }}.exe

  download-and-run-linux:
    needs: BuildGo
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Download Linux artifact
        uses: actions/download-artifact@v3
        with:
          name: linux

      - name: Run Linux script
        run: |
          chmod +x ./run.sh
          source ./run.sh

  download-only-windows:
    needs: BuildGo
    runs-on: windows-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Download Windows artifact
        uses: actions/download-artifact@v3
        with:
          name: windows
